<!DOCTYPE html>
<html lang="en">
<head>
    <title>Owl Ops Home</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!--
    Javascript
    -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>

    <!--
    css
    -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lemonada">
    <style>
    body { /* The image used */ background-image: url("https://getwallpapers.com/wallpaper/full/6/9/9/168463.jpg"); 
           /* Center and scale the image nicely */ 
           background-position: center; 
           background-repeat: no-repeat; background-size: cover; }
    </style>

</head>
<body>

    <!-- sticky/collapsible/dropdown Navbar -->

    <nav class="navbar navbar-expand-md navbar-dark sticky-top" style="background: rgba(00, 00, 00, 0.7); color: aliceblue">
        <!-- Brand -->
        <a class="navbar-brand" asp-area="" asp-page="/Index"><img src="~/01OwlSecurityOperations_LOGO.png" alt="OwlOps" style="width: 35px; height: 40px"></a>
        <!-- collapse Navbar button -->
        <button class="navbar-toggler" type="button"
                data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <!-- Links -->
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-page="/Measures/Index">Messungen</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-page="/LiveStream">Live Stream (inProgress)</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container" style="text-align: center">
        
            <main role="main" style="color: aliceblue; font-family: Titillium;font-weight:bold">
                @RenderBody()
            </main>
        </div>

    <div class="jumbotron text-center footer" style="width: 100%; height: 25vh; margin-top:50px; margin-bottom:-40px">
        <h5 style="font-weight: bold"><i class="fa fa-copyright"></i> Owl Ops 2021</h5>
    </div>

    <script>
        $(document).ready(function () {

            /*! Fades in page on load */
            $('body').css('display', 'none');
            $('body').fadeIn(2500);

        });
    </script>

</body>
</html>